" Module setup with pathogen
execute pathogen#infect()

" Default to bash syntax
au BufNewFile,BufRead * if &syntax == '' | set syntax=sh | endif

" For syntax highlihgting
syntax on
filetype on

" Spaces not tabs
set expandtab
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set smartindent

" Get line numbers
set number

" Search mods
set ignorecase
set hlsearch

" Wrap lines
set textwidth=80
set fo+=t

filetype indent on
filetype plugin on

